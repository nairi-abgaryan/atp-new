{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Photo Viewer</title>{% endblock %}

    {% block body %}

        <section class="photo-gallery-wrapper">
            <div class="container">
                <div class="row">

                    {% for item in photo %}
                        <div class="col-sm-4 col-xs-12">
                            <a class="fancybox" data-fancybox="gallery{{ item.id }}" href="../uploads/images/{{ item.Image }}">
                                <div class="single-gallery t-shirt-sightings" style="background:url('../uploads/images/{{ item.Image }}') no-repeat; background-size:cover;">
                                        <p>{{ item.Text|raw }}</p>
                                </div>
                            </a>
                            <div class="hidden">
                                {% for elem in item.images %}
                                <a class="fancybox" data-fancybox="gallery{{ item.id }}" href="../uploads/images/{{ elem.Image }}">
                                    <img src="../uploads/images/{{ elem.Image }}" alt=""/>
                                </a>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <!--Footer Section-->

        <section class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
